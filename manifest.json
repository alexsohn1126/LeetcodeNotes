{
  "manifest_version": 3,
  "name": "Leetcode Notes",
  "version": "1.0.0",
  "description": "Add and save notes for later in Leetcode",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Leetcode Notes",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "64": "icon-64.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "something@example.com"
    }
  }
}
